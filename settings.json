{
  // ==============================
  // üñºÔ∏è UI & Theme
  // ==============================
  "window.titleBarStyle": "native",
  "window.zoomLevel": 1.2,
  "workbench.colorTheme": "Catppuccin Noctis Macchiato",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorCustomizations": {
    "editor.background": "#1E1E2E"
  },

  // ==============================
  // üé® Font & Editor Visuals
  // ==============================
  "editor.fontFamily": "GeistMono Nerd Font Propo",
  "editor.fontSize": 18,
  "editor.fontWeight": "200",
  "editor.lineHeight": 1.5,
  "editor.letterSpacing": 0.5,
  "editor.fontLigatures": true,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.renderLineHighlight": "gutter",
  "editor.rulers": [80, 100, 120],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 80,
  "editor.minimap.showSlider": "always",
  "editor.stickyScroll.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.suggestSelection": "first",
  "editor.snippetSuggestions": "top",
  "editor.largeFileOptimizations": false,
  "editor.mouseWheelZoom": false,
  "editor.unusedCode.opacity": 0.6,
  "editor.showUnused": true,
  "editor.tabSize": 8,
  "editor.guides.bracketPairs": "active",
  "editor.guides.indentation": true,

  // ==============================
  // üß≠ Editor Behavior
  // ==============================
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,

  // ==============================
  // üõ†Ô∏è Formatting & Code Quality
  // ==============================
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  // ==============================
  // üß© Language Specific Settings
  // ==============================
  "[go]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go",
    "editor.tabSize": 8,
    "editor.snippetSuggestions": "none",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 8
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },

  // ==============================
  // üü¶ Go Tools & Linting
  // ==============================
  "go.formatTool": "gofumpt",
  "go.vetOnSave": true,
  "go.useCodeSnippetsOnFunctionSuggest": true,
  "go.useLanguageServer": true,
  "gopls": {
    "usePlaceholders": true
  },
  "go.toolsManagement.autoUpdate": true,

  // ==============================
  // üåà Rainbow Indent (Extension)
  // ==============================
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1,
  "indentRainbow.colors": [
    "rgba(255, 105, 97, 0.7)",
    "rgba(255, 179, 71, 0.7)",
    "rgba(255, 255, 77, 0.7)",
    "rgba(106, 255, 77, 0.7)",
    "rgba(77, 255, 255, 0.7)",
    "rgba(77, 179, 255, 0.7)",
    "rgba(179, 77, 255, 0.7)",
    "rgba(255, 77, 255, 0.7)",
    "rgba(255, 77, 179, 0.7)",
    "rgba(179, 255, 77, 0.7)"
  ],

  // ==============================
  // ‚ö°Ô∏è Extensions & Misc
  // ==============================
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // ==============================
  // üö´ Telemetry & Privacy
  // ==============================
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,

  // ==============================
  // üßπ File/Folder Exclude
  // ==============================
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/dist/public": true,
    "**/tmp": true,
    "**/tags": true,
    "**/public/dist": true,
    "**/.vscode": true
  }
}
